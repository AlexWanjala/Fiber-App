<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    tools:context=".ui.Packages">

    <FrameLayout
        android:id="@+id/fl_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="@string/close"
            android:id="@+id/image_close"
            android:layout_marginStart="20sp"
            android:src="@drawable/arrow_left"
            android:layout_width="26sp"
            android:layout_height="26sp"/>
        <TextView
            android:textColor="@color/text_color_black"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="@string/amount_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvAccNo"
        app:layout_constraintTop_toBottomOf="@+id/fl_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/text_color_black"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="24sp"
        tools:text="@string/acc_no"
        android:layout_width="313sp"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_marginBottom="70sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="277sp"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_marginBottom="20sp"
           android:gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_currency"
               android:visibility="gone"
               android:textStyle="bold"
               android:textSize="40sp"
               android:textColor="@color/text_color"
               android:gravity="center"
               android:layout_gravity="center"
               android:text="@string/currency"
               android:layout_width="wrap_content"
               android:layout_height="50sp"/>
           <TextView
               android:id="@+id/tv_currency_disabled"
               android:textStyle="bold"
               android:textSize="40sp"
               android:textColor="@color/bg_greenish"
               android:gravity="center"
               android:layout_gravity="center"
               android:text="@string/currency"
               android:layout_width="wrap_content"
               android:layout_height="50sp"/>

           <TextView
               android:id="@+id/tv_amount"
               android:layout_marginStart="10sp"
               android:textStyle="bold"
               android:textSize="40sp"
               android:textColor="@color/grey_light_2"
               android:gravity="center"
               android:layout_gravity="center"
               tools:text="3,200"
               android:layout_width="wrap_content"
               android:layout_height="50sp"/>

       </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="50sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_light_gray"
            android:orientation="horizontal"
            android:layout_width="196sp"
            android:layout_height="39sp">

            <TextView
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/amount_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAmountDue"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10sp"
                android:gravity="center"
                tools:text="@string/trans_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv2"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv3"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv4"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv5"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv6"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv7"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv8"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv9"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlus"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv0"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_gravity="center"
                android:src="@android:drawable/ic_input_delete"
                android:id="@+id/tvBack"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:tint="@color/text_grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnNextDisabled"
                android:visibility="visible"
                android:background="@color/bg_greenish"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/continue_"
                android:layout_width="match_parent"
                android:layout_height="48sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/btnNext"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/indicator_state_blue_background"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/continue_"
                android:layout_width="match_parent"
                android:layout_height="48sp"/>

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>