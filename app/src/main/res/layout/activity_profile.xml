<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="10sp"
    android:background="@drawable/bg_border"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:text="@string/show_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawableTint="@color/green_zuku"
                android:drawablePadding="5sp"
                android:drawableStart="@drawable/dot"
                android:layout_marginStart="20dp"
                android:textColor="@color/text_color_black"
                android:text="@string/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:text="@string/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawablePadding="5sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/text_color_black"
                android:text="173.292.9393.10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:text="@string/device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:paddingStart="10sp"
                android:background="@drawable/bg_border"
                android:drawablePadding="5sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/text_color_black"
                android:text="Alex"
                android:layout_width="100sp"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_color"
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:paddingStart="10sp"
                android:background="@drawable/bg_border"
                android:drawablePadding="5sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/text_color_black"
                android:text="1234567"
                android:layout_width="100sp"
                android:layout_height="wrap_content"/>



        </LinearLayout>


        <TextView
            android:id="@+id/tv_change_plan"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/indicator_state_blue_background"
            android:textColor="@drawable/indicator_state_color_button"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:text="@string/update"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>





    <LinearLayout
        android:layout_marginBottom="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/whatsapp"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/whastapp"
                android:layout_width="40sp"
                android:layout_height="40sp"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/call"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/call" />


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/info"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/website"
                android:layout_width="40sp"
                android:layout_height="40sp"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/faq"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/faw"
                android:layout_width="40sp"
                android:layout_height="40sp"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitter"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/twitter"
                android:layout_width="40sp"
                android:layout_height="40sp"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/facebook"
            android:layout_marginBottom="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginStart="5sp"
            android:background="@color/white"
            android:elevation="10sp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/facebook"
                android:layout_width="40sp"
                android:layout_height="40sp"/>


            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center"
                android:text="@string/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>