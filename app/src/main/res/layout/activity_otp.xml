<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landing.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginStart="20sp"
        android:layout_marginTop="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo"
        android:layout_width="104sp"
        android:layout_height="46sp"/>

    <ImageView
        android:id="@+id/image_close"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:layout_width="350sp"
        android:layout_height="408sp">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/otp_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:src="@drawable/blue_rod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:textColor="@color/text_grey"
            android:text="@string/otp_verification_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:orientation="vertical" >

                <EditText
                    android:maxLength="1"
                    tools:text="5"
                    android:background="@null"
                    android:focusable="false"
                    android:id="@+id/edText1"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_width="43sp"
                    android:layout_height="40sp"/>

                <View
                    android:layout_width="43sp"
                    android:layout_height="3sp"
                    android:background="@drawable/bottom_rod" />
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:orientation="vertical" >

                <EditText
                    android:maxLength="1"
                    tools:text="4"
                    android:background="@null"
                    android:focusable="false"
                    android:id="@+id/edText2"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_width="43sp"
                    android:layout_height="40sp"/>

                <View
                    android:layout_width="43sp"
                    android:layout_height="3sp"
                    android:background="@drawable/bottom_rod" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:orientation="vertical" >

                <EditText
                    android:maxLength="1"
                    tools:text="1"
                    android:background="@null"
                    android:focusable="false"
                    android:id="@+id/edText3"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_width="43sp"
                    android:layout_height="40sp"/>

                <View
                    android:layout_width="43sp"
                    android:layout_height="3sp"
                    android:background="@drawable/bottom_rod" />
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:orientation="vertical" >

                <EditText
                    android:maxLength="1"
                    tools:text="2"
                    android:background="@null"
                    android:focusable="false"
                    android:id="@+id/edText4"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:layout_width="43sp"
                    android:layout_height="40sp"/>

                <View
                    android:layout_width="43sp"
                    android:layout_height="3sp"
                    android:background="@drawable/bottom_rod" />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                android:text="@string/text_did_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="5sp"
                android:textSize="13sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:text="@string/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_grey"
                android:textSize="13sp"
                android:text="@string/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="5sp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="40 sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textCursorDrawable="@drawable/long_right_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvEnterDisabled"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_disabled"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:textSize="12sp"
            android:text="@string/Verify"
            android:layout_width="320sp"
            android:layout_height="40sp"
            android:layout_marginBottom="100sp"
            />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textCursorDrawable="@drawable/long_right_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvEnter"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/indicator_state_blue_background"
            android:textColor="@drawable/indicator_state_color_button"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:textSize="12sp"
            android:text="@string/Verify"
            android:layout_width="320sp"
            android:layout_height="40sp"
            android:layout_marginBottom="100sp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="300sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv1"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv2"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv3"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv4"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv5"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv6"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv7"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv8"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv9"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlus"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv0"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_gravity="center"
                android:src="@android:drawable/ic_input_delete"
                android:id="@+id/tvBack"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/text_grey"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:tint="@color/text_grey" />

        </LinearLayout>

    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>