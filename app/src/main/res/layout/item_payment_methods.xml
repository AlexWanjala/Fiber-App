<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

     <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/layoutPaymentMethod"
          android:background="@drawable/indicator_state_background"
          android:clickable="true"
          android:focusable="true"
          android:padding="10dp"
          android:orientation="horizontal"
          android:layout_marginTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
              android:padding="10sp"
              android:background="@drawable/bg_blue_round"
              android:src="@drawable/internet_only"
              android:layout_width="47sp"
              android:layout_height="47sp"/>
         <TextView
             android:layout_gravity="center"
             android:id="@+id/tvPaymentMethod"
             android:textColor="@color/text_color_black"
             android:textAllCaps="true"
             android:layout_marginStart="10sp"
             android:textSize="14sp"
             android:text="@string/internet_only_package"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>



      </androidx.appcompat.widget.LinearLayoutCompat>



    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</LinearLayout>