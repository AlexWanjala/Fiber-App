<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_light_one"
    android:id="@+id/layoutMain"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.PackageDetails">




        <ImageView
            android:contentDescription="@string/close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:id="@+id/image_close"
            android:layout_marginStart="20sp"
            android:src="@drawable/arrow_left"
            android:layout_width="30sp"
            android:layout_height="30sp"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/text_color_black"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="@string/triple_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_main_pg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="370sp"
        android:layout_height="580sp">
    
    
    <LinearLayout
        android:orientation="vertical"
         android:layout_marginEnd="20sp"
         android:layout_marginStart="20sp"
        android:gravity="center"
        android:background="@color/bg_greenish"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10sp"
            android:textColor="@color/green_zuku"
            android:textSize="14sp"
            android:text="@string/selection_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_date"
            android:background="@drawable/indicator_state_background"
            android:focusable="true"
            android:clickable="true"
            android:padding="4sp"
            android:layout_marginEnd="10sp"
            android:textColor="#03A9F4"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="5sp"
            android:text="Select date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="354sp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="10sp"
            android:id="@+id/tvSPeed"
            android:layout_gravity="center"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="center"
            tools:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:textColor="#028CFA"
            android:background="@drawable/indicator_state_background_grey"
            android:clickable="true"
            android:layout_marginTop="20sp"
            android:id="@+id/tvDes"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="@string/desc"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center"
            android:background="#3BB9FF"
            android:layout_width="150dp"
            android:layout_height="1dp"/>



        <TextView
            android:id="@+id/tvAmount"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:textColor="@color/zuku_Orange"
            android:textSize="30sp"
            android:layout_gravity="center"
            tools:text="KES 2,899"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_circular2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvPackage"
            android:background="@drawable/indicator_state_blue_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="@string/submit"
            android:gravity="center"
            android:layout_width="300sp"
            android:layout_height="48sp"/>



        <TextView
            android:id="@+id/tv_close"
            android:background="@drawable/indicator_state_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:textColor="@color/text_grey"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="@string/close"
            android:gravity="center"
            android:layout_width="300sp"
            android:layout_height="48sp"/>

    </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>