<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landing.Login">

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progress_circular"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo"
        android:layout_width="104sp"
        android:layout_height="46sp"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="350sp"
        android:layout_height="408sp">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:src="@drawable/blue_rod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:textColor="@color/text_grey"
            android:text="@string/phone_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/edPhone"
            android:inputType="phone"
            android:layout_gravity="center"
            android:drawableStart="@drawable/phone_call"
            android:paddingStart="10sp"
            android:drawablePadding="20sp"
            android:hint="@string/phone_number"
            android:layout_marginTop="70sp"
            android:background="@color/grey"
            android:layout_width="320sp"
            android:layout_height="57sp"/>

    </LinearLayout>

    <TextView
        android:drawableEnd="@drawable/long_right_arrow"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textCursorDrawable="@drawable/long_right_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_get_otp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/indicator_state_blue_background"
        android:textColor="@drawable/indicator_state_color_button"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:textSize="12sp"
        android:text="@string/get_opt"
        android:layout_width="320sp"
        android:layout_height="40sp"
        android:layout_marginBottom="100sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>