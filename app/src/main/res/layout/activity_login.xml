<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landing.Login">

    <ImageView
        android:layout_gravity="right"
        android:id="@+id/image_close2"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="50sp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/black" />

    <ProgressBar
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress_circular"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_gravity="center"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:src="@drawable/logo"
        android:layout_width="104sp"
        android:layout_height="46sp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:src="@drawable/blue_rod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:textColor="@color/text_grey"
            android:text="@string/phone_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/blue_zuku"
            android:layout_marginStart="30dp"
            android:text="@string/select_county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginEnd="30dp"
            android:background="@color/grey"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:backgroundTint="@color/text_color"
                android:layout_marginLeft="0dp"
                android:id="@+id/mySpinner"
                android:layout_width="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/blue_zuku"
            android:layout_marginStart="30dp"
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_marginTop="10dp"
            android:drawableTint="@color/black"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:padding="15sp"
            android:id="@+id/edPhone"
            android:inputType="phone"
            android:layout_gravity="center"
            android:drawableStart="@drawable/phone_call"
            android:paddingStart="10sp"
            android:drawablePadding="20sp"
            android:hint="@string/phone_number"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:drawableEnd="@drawable/long_right_arrow"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textCursorDrawable="@drawable/long_right_arrow"
            android:id="@+id/tv_get_otp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/indicator_state_blue_background"
            android:textColor="@drawable/indicator_state_color_button"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:textSize="12sp"
            android:text="@string/get_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>




</androidx.appcompat.widget.LinearLayoutCompat>